<section class="section-iwd">
    <div class="section-iwd__wrapper">
        {% for block in section.blocks %}
            <div class="section-iwd__block">
                <img src="{{ block.settings.icon | image_url }}" width="auto" height="auto" loading="lazy" class="icon">
                <div class="title">{{ block.settings.title }}</div>
                <div class="description">{{ block.settings.description }}</div>
            </div>
        {% endfor %}
    </div>
</section>

{% schema %}
    {
        "name": "Icons with descriptions",
        "settings": [
        ],
        "blocks": [
            {
                "name": "Block",
                "type": "block",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "icon",
                        "label": "Icon"
                    },
                    {
                        "type": "textarea",
                        "id": "title",
                        "label": "Title",
                        "info": "Use <br> to break the line"
                    },
                    {
                        "type": "textarea",
                        "id": "description",
                        "label": "Description",
                        "info": "Use <br> to break the line"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Icons with descriptions",
                "settings": {

                }
            }
        ]
    }
{% endschema %}